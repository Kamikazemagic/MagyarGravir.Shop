@page
@model MagyarGravir.Shop.Pages.Admin.Categories.CategoryListModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Kategóriák – Admin</title>

    <style>
        body {
            background: #111;
            color: white;
            font-family: Arial;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #333;
        }

        th {
            background: #222;
        }

        a.button {
            padding: 8px 15px;
            background: #eab308;
            color: black;
            font-weight: bold;
            border-radius: 6px;
            text-decoration: none;
        }

        .edit {
            color: #3b82f6;
        }

        .delete {
            color: #ef4444;
        }
    </style>
</head>

<body>

    <h1>Kategóriák kezelése</h1>

    <a class="button" href="/Admin/Categories/Create">Új kategória</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Név</th>
                <th>Egyedi?</th>
                <th>Műveletek</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in Model.Categories)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>@(c.IsCustom ? "Igen" : "Nem")</td>
                    <td>
                        <a href="/Admin/Categories/Edit?id=@c.Id" class="edit">Szerkesztés</a> |
                        <a href="/Admin/Categories/Delete?id=@c.Id" class="delete">Törlés</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
