@page
@model MagyarGravir.Shop.Pages.Admin.Orders.DetailsModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}


<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <title>Rendelés részletei – Admin</title>

    <style>
        body {
            background: #111;
            color: white;
            font-family: Arial;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        td, th {
            padding: 10px;
            border-bottom: 1px solid #333;
        }

        .price {
            color: #eab308;
        }

        button {
            background: #eab308;
            color: black;
            padding: 10px 18px;
            border: none;
            font-weight: bold;
            margin-top: 20px;
            border-radius: 6px;
            cursor: pointer;
        }

        .done {
            color: #4ade80;
            font-weight: bold;
        }
    </style>
</head>



    <h1>Rendelés #@Model.Order?.Id</h1>

@if (Model.Order != null)
{
        <h3>Vevő adatai</h3>
        <p><b>Név:</b> @Model.Order.CustomerName</p>
        <p><b>Email:</b> @Model.Order.Email</p>
        <p><b>Cím:</b> @Model.Order.Address</p>
        <p><b>Megjegyzés:</b> @Model.Order.Note</p>
        <p><b>Dátum:</b> @Model.Order.CreatedAt.ToLocalTime()</p>

        <h3>Rendelés tételei</h3>
        <table>
            <tr>
                <th>Termék</th>
                <th>Mennyiség</th>
                <th>Ár</th>
            </tr>
            @foreach (var i in Model.Order.Items)
            {
                <tr>
                    <td>@i.ProductName</td>
                    <td>@i.Quantity</td>
                    <td>@i.UnitPrice Ft</td>
                </tr>
            }
        </table>

        <h3>
            Összesen:
            <span class="price">
                @(Model.Order.Items.Sum(x => x.Quantity * x.UnitPrice)) Ft
            </span>
        </h3>

        <form method="post" asp-page-handler="post">
            <button type="submit">Rendelés teljesítve</button>
        </form>
}
