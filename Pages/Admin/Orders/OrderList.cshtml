@page "/Admin/Orders"
@model MagyarGravir.Shop.Pages.Admin.Orders.OrderListModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Rendelések – Admin</title>

    <style>
        body {
            background: #111;
            color: white;
            font-family: Arial;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        td, th {
            padding: 10px;
            border-bottom: 1px solid #333;
        }

        a {
            color: #eab308;
            text-decoration: none;
        }

        .done {
            color: #4ade80;
            font-weight: bold;
        }

        .pending {
            color: #f87171;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <h1>Rendelések</h1>

    <table>
        <tr>
            <th>ID</th>
            <th>Név</th>
            <th>Email</th>
            <th>Dátum</th>
            <th>Állapot</th>
            <th>Művelet</th>
        </tr>

        @foreach (var o in Model.Orders)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.CustomerName</td>
                <td>@o.Email</td>
                <td>@o.CreatedAt.ToLocalTime().ToString("yyyy.MM.dd HH:mm")</td>
                <td>
                    @if (o.IsCompleted)
                    {
                        <span class="done">Teljesítve</span>
                    }
                    else
                    {
                        <span class="pending">Feldolgozás alatt</span>
                    }
                </td>
                <td>
                    <a href="/Admin/Orders/Details?id=@o.Id">Megnyitás</a>
                </td>
            </tr>
        }
    </table>

</body>
</html>
