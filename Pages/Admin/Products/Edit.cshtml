@page
@model MagyarGravir.Shop.Pages.Admin.Products.EditModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <title>Termék szerkesztése – Admin</title>

    <style>
        body {
            background: #111;
            color: white;
            font-family: Arial;
            padding: 30px;
        }

        label {
            display: block;
            margin-top: 15px;
        }

        input, select, textarea {
            width: 300px;
            margin-top: 5px;
            padding: 8px;
            border-radius: 6px;
            border: none;
        }

        .current-image {
            margin-top: 10px;
        }

        img {
            border: 2px solid #333;
            margin-bottom: 10px;
        }

        button {
            margin-top: 20px;
            padding: 10px 18px;
            font-size: 16px;
            font-weight: bold;
            background: #eab308;
            color: black;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        a {
            color: #eab308;
        }
    </style>
</head>
<body>

    <h1>Termék szerkesztése</h1>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="EditProduct.Id" />

        <label>
            Termék neve:
            <input asp-for="EditProduct.Name" />
        </label>

        <label>
            Leírás:
            <textarea asp-for="EditProduct.Description" rows="4"></textarea>
        </label>

        <label>
            Ár (Ft):
            <input asp-for="EditProduct.Price" type="number" step="0.01" />
        </label>

        <label>
            Kategória:
            <select asp-for="EditProduct.CategoryId">
                @foreach (var c in Model.Categories)
                {
                    <option value="@c.Id" selected="@(c.Id == Model.EditProduct.CategoryId)">
                        @c.Name
                    </option>
                }
            </select>
        </label>

        <label>
            Készleten lévő darab:
            <input asp-for="EditProduct.StockQuantity" type="number" />
        </label>

        <label>
            Aktív:
            <input asp-for="EditProduct.IsActive" type="checkbox" />
        </label>

        <div class="current-image">
            @if (!string.IsNullOrEmpty(Model.EditProduct.MainImagePath))
            {
                <p>Jelenlegi kép:</p>
                <img src="@Model.EditProduct.MainImagePath" width="120" />
            }
        </div>

        <label>
            Új kép feltöltése:
            <input type="file" name="UploadImage" />
        </label>

        <button type="submit">Mentés</button>
    </form>

    <br />
    <a href="/Admin/Products">← Vissza a listához</a>

</body>
</html>
