@page
@model MagyarGravir.Shop.Pages.Admin.Products.CreateModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <title>Új termék – Admin</title>

    <style>
        body {
            background: #111;
            font-family: Arial;
            color: white;
            padding: 30px;
        }

        label {
            display: block;
            margin-top: 15px;
        }

        input, select, textarea {
            width: 300px;
            margin-top: 5px;
            padding: 8px;
            border-radius: 6px;
            border: none;
        }

        button {
            margin-top: 20px;
            padding: 10px 18px;
            font-size: 16px;
            font-weight: bold;
            background: #eab308;
            color: black;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        a {
            color: #eab308;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <h1>Új termék létrehozása</h1>

    <form method="post" enctype="multipart/form-data">


        <label>
            Termék neve:
            <input asp-for="NewProduct.Name" />
        </label>

        <label>
            Leírás:
            <textarea asp-for="NewProduct.Description" rows="4"></textarea>
        </label>

        <label>
            Ár (Ft):
            <input asp-for="NewProduct.Price" type="number" step="0.01" />
        </label>

        <label>
            Kategória:
            <select asp-for="NewProduct.CategoryId">
                <option value="">-- válassz --</option>
                @foreach (var c in Model.Categories)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
        </label>

        <label>
            Készleten lévő darab (ha üres → egyedi gyártás):
            <input asp-for="NewProduct.StockQuantity" type="number" />
        </label>

        <label>
            Aktív:
            <input asp-for="NewProduct.IsActive" type="checkbox" />
        </label>

        <label>
            Termék fő képe:
            <input type="file" name="UploadImage" />
        </label>


        <button type="submit">Mentés</button>
    </form>

    <br />
    <a href="/Admin/Products">← Vissza a listához</a>

</body>
</html>
