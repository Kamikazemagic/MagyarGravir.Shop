@page
@model MagyarGravir.Shop.Pages.Account.RegisterModel

<div class="account-card">
    <h2>Regisztráció</h2>

    <form method="post">
        <input asp-for="Username" placeholder="Felhasználónév" required />
        <input asp-for="Email" placeholder="Email" type="email" required />
        <input asp-for="Password" placeholder="Jelszó" type="password" required />
        <input asp-for="ConfirmPassword" placeholder="Jelszó újra" type="password" required />
        <input asp-for="ZipCode" placeholder="Irányítószám" required />
        <input asp-for="City" placeholder="Város" required />
        <input asp-for="Street" placeholder="Utca, házszám" required />


        <button type="submit">Regisztráció</button>
    </form>


    @if (TempData["Error"] != null)
    {
        <p class="text-danger">@TempData["Error"]</p>
    }
    @if (TempData["Message"] != null)
    {
        <p class="text-success">@TempData["Message"]</p>

    }

    <link rel="stylesheet" href="~/css/register.css" />


</div>