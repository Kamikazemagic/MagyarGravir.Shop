@page
@model MagyarGravir.Shop.Pages.Shop.CartModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Kosár – Magyar Gravír</title>

    <style>
        body {
            background: #111;
            color: white;
            font-family: Arial;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            table td, table th {
                padding: 10px;
                border-bottom: 1px solid #333;
            }

        img {
            width: 80px;
            border-radius: 6px;
        }

        .price {
            color: #eab308;
        }

                .mennyiseg-gomb {
            width: 30px;        /* (+),(-)gombok fix szélessége */
            height: 30px;       /* (+),(-)gombok fix magassága */
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            background-color: #eab308;
            border: none;
            border-radius: 4px;
            color: #111;
        }

        .mennyiseg-gomb:hover {
            background-color: #ca8a04;
        }

        a:link, a:visited {
            color: white;
            text-decoration-line: none;
        }

        a:active, a:hover {
            color: #eab308;
            text-decoration-line: none;
        }

        .cart-buttons {
            margin-top: 20px;
            display: flex;
            justify-content: space-between; /*az egyik gomb a balra, a másik a jobbra*/
            align-items: center;
        }

        .btn-vasarlas, .btn-penztarhoz {
            background: #222;
            padding: 15px 20px;
            border-radius: 8px;
            text-decoration: none;
            color: white;
            font-size: 18px;
            border: 1px solid #333;
        }
    </style>
</head>

<body>

    <h1>Kosár</h1>

    @if (Model.Cart.Count == 0)
    {
        <p>A kosár üres.</p>
    }
    else
    {
        <table>
            <tr>
                <th>Kép</th>
                <th>Termék</th>
                <th>Db</th>
                <th>Ár</th>
            </tr>

            @foreach (var item in Model.Cart)
            {
                <tr>
                    <td><img src="@item.Image" /></td>
                    <td>@item.Name</td>
                    <td>
                        <!--a (-) gomb balra-->
                        <form method="post" asp-page-handler="Decrease" style="display:inline-block">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="mennyiseg-gomb">-</button>
                        </form>

                        <!--mennyiség középen-->
                        <span style="padding:0 10px;">@item.Quantity</span>

                        <!--a (+) gomb jobbra-->
                        <form method="post" asp-page-handler="Increase" style="display:inline-block">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="mennyiseg-gomb">+</button>
                        </form>
                    </td>

                        <!--a mennyiségnek megfelelően kiszámolja a teljes árat a sor végén-->
                    <td class="price">@(@item.Price * @item.Quantity) Ft</td>
                </tr>
            }
        </table>

        <p style="margin-top:20px; font-size:20px;">
            Összesen:
            <span class="price">
                @Model.Cart.Sum(i => i.Price * i.Quantity) Ft
            </span>
        </p>

                <!--kosár gombok (Vásárlás folytatása) és (Tovább a pénztárhoz)-->
        <div class="cart-buttons">
            <a href="/" class="btn-vasarlas">Vásárlás folytatása</a>
            <a href="/Shop/Checkout" class="btn-penztarhoz">Tovább a pénztárhoz</a>
        </div>
    }

</body>
</html>
