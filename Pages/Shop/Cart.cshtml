@page
@model MagyarGravir.Shop.Pages.Shop.CartModel
@{
    Layout = "/Pages/Shared/_PublicLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Kosár – Magyar Gravír</title>

    <style>
        body {
            background: #111;
            color: white;
            font-family: Arial;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            table td, table th {
                padding: 10px;
                border-bottom: 1px solid #333;
            }

        img {
            width: 80px;
            border-radius: 6px;
        }

        .price {
            color: #eab308;
        }
    </style>
</head>

<body>

    <h1>Kosár</h1>

    @if (Model.Cart.Count == 0)
    {
        <p>A kosár üres.</p>
    }
    else
    {
        <table>
            <tr>
                <th>Kép</th>
                <th>Termék</th>
                <th>Db</th>
                <th>Ár</th>
            </tr>

            @foreach (var item in Model.Cart)
            {
                <tr>
                    <td><img src="@item.Image" /></td>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td class="price">@item.Price Ft</td>
                </tr>
            }
        </table>

        <p style="margin-top:20px; font-size:20px;">
            Összesen:
            <span class="price">
                @Model.Cart.Sum(i => i.Price * i.Quantity) Ft
            </span>
        </p>
    }

</body>
</html>
