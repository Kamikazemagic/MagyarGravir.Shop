@page
@model MagyarGravir.Shop.Pages.Shop.CategoryModel
@{
    Layout = "/Pages/Shared/_PublicLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.CurrentCategory?.Name – Magyar Gravír</title>

    <style>
        body {
            background: #111;
            color: white;
            font-family: Arial;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #eab308;
        }

        .products {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background: #1b1b1b;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #333;
            text-align: center;
            text-decoration: none;
            color: white;
        }

            .product-card img {
                width: 100%;
                max-height: 180px;
                object-fit: cover;
                border-radius: 6px;
            }

        .name {
            font-weight: bold;
            margin-top: 10px;
        }

        .price {
            color: #eab308;
            margin-top: 5px;
        }
    </style>
</head>

<body>

    <h1>@Model.CurrentCategory?.Name</h1>

    @if (Model.Products.Count == 0)
    {
        <p>Nincs megjeleníthető termék ebben a kategóriában.</p>
    }
    else
    {
        <div class="products">
            @foreach (var p in Model.Products)
            {
                <a href="/Shop/Product?id=@p.Id"
                   class="product-card"
                   target="_blank"
                   rel="noopener noreferrer">
                    <img src="@p.MainImagePath" alt="@p.Name" />
                    <div class="name">@p.Name</div>
                    <div class="price">@p.Price Ft</div>
                </a>
            }
        </div>
    }

</body>
</html>
