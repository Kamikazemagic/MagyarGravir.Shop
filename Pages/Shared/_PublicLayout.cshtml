@*
    PUBLIC LAYOUT – minden publikus oldal ezt fogja használni
*@
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <title>Magyar Gravír</title>

    <link rel="stylesheet" href="/app.css" />
    <script src="/app.js"></script>

    <style>
        body {
            background: #111;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Felső fejléc */
        .header {
            background: url('/logo-background.png') center/cover no-repeat;
            padding: 18px 30px;
            display: flex;
            align-items: center;
            gap: 25px;
            border-bottom: 1px solid #222;
            box-shadow: 0 0 25px #000 inset;
        }

            .header img {
                height: 52px;
            }

        /* Menü */
        .menu a {
            margin-right: 25px;
            color: #eab308;
            text-decoration: none;
            font-size: 18px;
            transition: 0.2s;
        }

            .menu a:hover {
                color: white;
                text-shadow: 0 0 10px #eab308;
            }

        /* Tartalom */
        .content {
            padding: 30px;
        }
    </style>

</head>
<body>

    <!-- Fejléc -->
    <div class="header">
        <img src="/Magyar-Gravir-logo.png" alt="Magyar Gravír logó" />

        <div class="menu">
            <a href="/">Főoldal</a>
            <a href="/Shop/Category?id=1">Kategóriák</a>
            <a href="/Shop/Cart">Kosár</a>
            <a href="/Shop/Checkout">Rendelés</a>
        </div>
    </div>

    <!-- OLDAL TARTALMA -->
    <div class="content">
        @RenderBody()
    </div>

</body>
</html>
