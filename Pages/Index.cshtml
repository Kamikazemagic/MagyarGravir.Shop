@page
@model MagyarGravir.Shop.Pages.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Főoldal";
}

<!-- HERO -->
<div class="mg-hero">
    <div class="mg-hero-content">
        <h1 class="mg-hero-title">Egyedi gravírozott ajándékok</h1>
        <p class="mg-hero-sub">Fedezd fel a legkülönlegesebb gravírozott termékeinket, minden alkalomra.</p>
        <div class="mg-hero-buttons">
            <a class="mg-btn-primary" href="/Shop/Category?id=1">Vásárlás</a>
            <a class="mg-btn-outline" href="/Kapcsolat">Kapcsolat</a>
        </div>
    </div>
</div>

<!-- Kategóriák -->
<section class="mg-section">
    <div class="mg-section-header">
        <h2 class="mg-section-title">Kategóriák</h2>
    </div>
    <div class="mg-category-list">
        @foreach (var c in Model.Categories)
        {
            <a class="mg-category-pill" href="/Shop/Category?id=@c.Id">@c.Name</a>
        }
    </div>
</section>

<!-- Új termékek -->
<section class="mg-section">
    <div class="mg-section-header">
        <h2 class="mg-section-title">Új termékek</h2>
    </div>
    <div class="mg-product-grid">
        @foreach (var p in Model.FeaturedProducts)
        {
            <a class="mg-product-card" href="/Shop/Product?id=@p.Id">
                <div class="mg-product-img">
                    <img src="@p.MainImagePath" alt="@p.Name" />
                </div>
                <div class="mg-product-name">@p.Name</div>
                <div class="mg-product-meta">
                    <div class="mg-price">@p.Price Ft</div>
                </div>
            </a>
        }
    </div>
</section>